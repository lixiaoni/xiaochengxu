.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 600rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  min-height: 275rpx;
  color: #000;
  font-size: 40rpx;
  z-index: 9999;
  text-align: center;
  background: #f9f9f9;
  font-weight: bold;
  border-radius: 10rpx;
}

button, .button-hover {
  width: 240rpx;
  height: 70rpx;
  color: #fff;
  line-height: 68rpx;
  border: 2rpx solid #ca7;
  font-size: 30rpx;
  margin-top: 25rpx;
  background: #ca7;
}

.mes-tel {
  color: #ca7;
  border-bottom: 2rpx solid #ca7;
  width: 265rpx;
  margin: 0 auto;
  padding-top: 10rpx;
}

.mes-m {
  margin-top: 60rpx;
}

.modal-title {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}

.modal-title image {
  width: 40rpx;
  height: 40rpx;
}

.modal-content {
  padding: 5rpx 0 0 0;
  position: relative;
}

.hide {
  display: none;
}

.show {
  display: block;
}
