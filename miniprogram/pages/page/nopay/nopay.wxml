<!-- 确认收货 -->
<mes show="{{sureModal}}">
  <view>
    <text>是否确认收货？</text>
    <button bindtap='sureSure'>确定</button>
  </view>
</mes>
<!-- 取消订单 -->
<clo show="{{cancelModal}}">
  <view wx:for='{{reason}}' wx:key='{{index}}' data-current="{{index}}" bindtap='swichReason'>
    <icon wx:if="{{item.selected}}" type="success" color="#CCAA77" data-index="{{index}}" size='18' class="cart-pro-select" />
    <icon wx:else type="circle" class="cart-pro-select" size='18' data-index="{{index}}" /> {{item.title}}
  </view>
  <button bindtap='sureCancel'>确定</button>
</clo>
<!-- 删除订单 -->
<mes show="{{delModal}}" bind:sureSelectArea="sureSelectAreaListener">
  <view>
    <text>确认删除订单？</text>
    <button bindtap='sureDel'>确定</button>
  </view>
</mes>


<!-- <image src="/image/back.png" class='slide-image' mode="widthFix"></image> -->
<view class='order-title-box order-title-img'>
  <!-- 待付款 -->
  <view class='flex-box' wx:if="{{status=='unpaid'}}">
    <view class='np-title'>
      <image src="/image/nz.png"></image>等待买家付款
    </view>
    <view class='np-right'>
      <view>剩余时间：{{clock}}</view>
      <view>需付款：￥{{order.orderAmount}}</view>
    </view>
  </view>

  <!-- 已付款 -->
  <view class='np-title' wx:if="{{status=='paid'}}">
    <image src="/image/wuliu.png"></image>等待卖家发货
  </view>
  <!-- 待收货 -->
  <view class='flex-box' wx:if='{{status=="shipped"}}'>
    <view class='np-title'>
      <image src="/image/nz.png"></image>卖家已发货
    </view>
    <view class='np-right np-right1'>
      <view>21天15小时 后自动确认收货</view>
    </view>
  </view>
  <!-- 交易成功 -->
  <view class='np-title' wx:if="{{status=='finish'}}">
    <image src="/image/mon.png"></image>交易成功
  </view>
  <!-- 交易关闭 -->
  <view class='flex-box' wx:if="{{status=='closed' || status=='cancelled' }}">
    <view class='np-title'>
      <image src="/image/qx.png"></image>交易关闭
    </view>
    <view class='np-right'>
      <view>原因：
        <text wx:if="{{status=='closed'}}">{{order.closedReason?order.closedReason:""}}</text>
        <text wx:if="{{status=='cancelled'}}">{{order.cancelReason?order.cancelReason:""}}</text>
      </view>
    </view>
  </view>
</view>
<view class='np-ct'>
  <view class='np-view np-code np-coden1' wx:if="{{status=='finish'||status=='shipped'}}">
    <image src="/image/wl-car.png"></image>
    <view>物流信息</view>
    <text>承运公司：{{order.expressCompany?order.expressCompany:""}}</text>
    <view>
      <text>运单编号：{{order.expressNumber?order.expressNumber:""}}</text>
    </view>
    <!-- <text>卖家暂未填写订单信息</text> -->
  </view>
  <view class='np-view'>
    <image src="/image/ad.png"></image>
    <text class='np-text'>{{order.consigneeInfo.userPhone}}</text>
    <view>收货人：{{order.consigneeInfo.userName}}</view>
    <text>收货地址：{{order.consigneeInfo.detailAddress}}</text>
  </view>
  <view class='np-view np-view1'>
    <image src="/image/mes2.png"></image>
    <view>留言</view>
    <text>{{order.userMemo}}</text>
  </view>
</view>
<view class='np-mes'>
  <view>
    <image src="/image/mes.png"></image>联系卖家
    <!-- <button class="kf_button" open-type="contact" session-from="weapp"></button> -->
  </view>
  <view bindtap='tel'>
    <image src="/image/tel1.png"></image>拨打电话</view>
</view>
<view class='cf-cont'>
  <view class='c-title'>
    <image src="/image/ic1.png"></image> {{order.storeInfo.storeName}}
    <image class='itimg' src="/image/icl.png"></image>
  </view>
  <view>
    <view class="cart-box">
      <view class="cart-list" wx:for="{{showList}}" wx:key="{{index}}">
        <navigator>
          <image class="cart-thumb" src="{{baseUrl+item.mainImgUrl}}?x-oss-process=style/goods-small"></image>
        </navigator>
        <view class='ct-text ct-text1'>￥{{item.orderDetails.sellPrice}}
          <view>x {{item.orderDetails.num}}</view>
        </view>
        <view class='ct-title ct-title1'>{{item.goodsName}}</view>
        <text class="cart-pro-name">规格：{{item.orderDetails.goodsDesc}}</text>
      </view>
    </view>
  </view>
</view>



<!-- 显示字段 -->
<view class='np-order'>
  <view>订单号
    <text>{{order.orderNumber}}</text>
  </view>
  <view>创建时间
    <text>{{order.createDate}}</text>
  </view>

  <block wx:if="{{status!='closed'&& status!='cancelled'}}">
    <block wx:if="{{status!='unpaid'}}">
      <!-- <view>交易单号
    <text>83578475389</text>
  </view> -->
      <view>支付时间
        <text>{{order.payDate}}</text>
      </view>
    </block>
    <block wx:if="{{status=='shipped'}}">
      <view>发货时间
        <text>{{order.deliverDate}}</text>
      </view>
    </block>
    <block wx:if="{{status=='finish'}}">
      <view>成交时间
        <text>{{order.finishDate}}</text>
      </view>
    </block>
  </block>
  <block wx:if="{{status=='closed'|| status=='cancelled'}}">
    <view>关闭时间
      <text></text>
    </view>
  </block>
</view>

<view class='np-fapiao'>
  <view>发票信息
    <text>{{order.receiptInfo?order.receiptInfo.invoiceCategory:"不开发票"}}</text>
  </view>
  <view wx:if="{{order.receiptInfo.invoiceType=='公司'}}">
    <view>公司名称
      <text>{{order.receiptInfo.invoiceTitle}}</text>
    </view>
    <view>纳税人识别号
      <text>{{order.receiptInfo.identificationNumber}}</text>
    </view>
    <block wx:if="{{order.receiptInfo.invoiceCategory=='增值税专用发票'}}">
      <view>注册地址
        <text>{{order.receiptInfo.registeredAddress}}</text>
      </view>
      <view>注册电话
        <text>{{order.receiptInfo.registererMobile}}</text>
      </view>
      <view>开户银行
        <text>{{order.receiptInfo.depositBank}}</text>
      </view>
      <view>开户账号
        <text>{{order.receiptInfo.depositBankNumber}}</text>
      </view>
    </block>
  </view>
</view>

<!-- 金额 -->
<view class='np-order np-order-bar'>
  <view>商品总额
    <text>￥{{order.orderAmount}}</text>
  </view>
  <view>运费类型
    <text>货到付款</text>
  </view>
  <view class='np-o-view'>实付金额
    <text>￥{{order.orderAmount}}</text>
  </view>
</view>

<view class='cf-button'>
  <block wx:if="{{status=='unpaid'}}">
    <button style='' bindtap="uploadVoucher" class='or-active'> 上传支付凭证 </button>
    <button bindtap='showModal' data-type='cancel'>取消订单</button>
  </block>

  <block wx:if="{{status=='paid'}}">
    <button class='or-active'> 提醒发货 </button>
  </block>

  <block wx:if="{{status=='shipped'}}">
    <button class='or-active' data-type='get' bindtap='showModal'> 确认收货 </button>
    <button>查看物流</button>
  </block>

  <block wx:if="{{status=='finish'}}">
    <button class='or-active'> 售后服务 </button>
    <button>查看物流</button>
  </block>

  <block wx:if="{{status=='finish' || status=='closed'|| status=='cancelled'}}">
    <button data-index='{{index}}' data-type='del' bindtap='showModal'>删除订单</button>
  </block>
</view>