@import '../order/order';
page{
  height: auto!important;
  padding-bottom: 10rpx;
}
.order-title-box{
  background-size: cover;
}
.no-border{
  border-bottom:0!important; 
}
.flex-box{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.ct-text{
  color:#CCAA77;
  right: 50rpx;
}
.ct-text view{
  color:#999;
}
.slide-image{    
   width: 100%;
   position:absolute;
   top: 0;
   left: 0;    
}
.np-title{
  height: 130rpx;
  line-height: 130rpx;
  color: #fff;font-weight: bold;
  font-size: 36rpx;
  position: relative;
  padding-left: 50rpx;
}
.np-title image{
  width: 45rpx;
  height: 45rpx;
  vertical-align: middle;
  margin-top: -4rpx;
  margin-right: 20rpx;
}
.np-right{
  /* position: absolute; */
  /* right: 25rpx; */
  padding-right: 50rpx;
  font-size: 26rpx;
  color: #fff;
  top:30rpx;
  text-align: right;
}
.np-right1{
  top: 50rpx;
}
.np-ct{
  background: #fff;
  color: #333;font-size: 30rpx;
  padding: 10rpx 0 0;
}

.np-ct .np-view{
  margin-left:100rpx;
  /* min-height: 190rpx; */
  margin-right: 50rpx;
  border-bottom: 2rpx solid #f3f3f3;
  position: relative;
  padding-bottom:30rpx;
  box-sizing: border-box;
}
.np-ct .np-view1{
  border-bottom: 0;
}
.np-ct .np-view view{
  padding-top: 20rpx;
  font-weight:bold;
  margin-bottom: 5rpx;
}
.np-ct text,.np-ct .np-coden1 text {
  color: #666;font-weight: normal;
  font-size: 26rpx;
}
.np-ct .np-code text{
  font-size: 26rpx;
  color: #333;
}

.np-ct .np-code view:last-child{
  padding-top: 0rpx;
}
.np-ct image{
  position: absolute;
  width: 35rpx;
  height: 35rpx;
  left: -45rpx;
  top: 28rpx;
}
.np-ct .np-text{
  color: #333;
  font-weight:bold;
  font-size: 30rpx;
  position: absolute;
  right: 0;
  top:20rpx;
}
.np-mes{
  color: #333;
  background: #fff;
  font-size: 30rpx;
  margin-top: 20rpx;
  text-align: center;
  height: 100rpx;
}
.np-mes view{
  width: 49%;
  height: 40rpx;
  margin-top: 27rpx;
  display: inline-block;
  position: relative;
}
.kf_button{
  position: absolute;
  width: 100%;
  top: 0px;
  height: 60rpx;
  background: none;
}
.np-mes view:first-child{
  border-right: 2rpx solid #f3f3f3;
}
.np-mes image{
  width: 42rpx;
  height: 43rpx;
  vertical-align: middle;
  margin-top: -2rpx;
  margin-right: 10rpx;
}
.np-order{
  font-size: 26rpx;
  color: #333;
  background: #fff;
  margin-bottom: 20rpx;
  padding:20rpx 50rpx 30rpx;
}
.np-order-bar{
  margin-bottom: 120rpx;
}
.np-order view{
  margin-top: 10rpx;
}
.np-order view text{
  float: right;font-weight: bold;
}
.np-order-bar view text{
  color: #333;
}
.np-order>view:last-child view:last-child{
  line-height: 20rpx;
  margin-top: 0rpx;
  margin-bottom: 10rpx;
}
.np-order view.np-o-view{
  border-top: 0;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}
.np-order view.np-o-view text{
  color:#C79359;
  font-size: 34rpx;
}

.cf-button{
  height: 105rpx;
  background: none;
  padding:15rpx 20rpx 0 0;
  position: fixed;
  bottom: 0;
  width: 100%;
  /* border-top: 2rpx solid #DFDFDF; */
  background: #fff;
}
.cf-button button{
  height: 75rpx;
  /* width: 190rpx; */
  font-size:30rpx;
  color: #666;
  line-height: 75rpx; 
}
.cf-button button:first-child{
  margin-right: 30rpx;
}
.np-fapiao{
  border-top:2rpx solid #f3f3f3;
  padding-top:20rpx;
  font-size:26rpx;
  color:#333;
  background:#fff;
  margin-bottom: 20rpx;
  padding:30rpx 50rpx;
}
.np-fapiao view{
  margin-bottom: 10rpx;
}
.np-fapiao text{
  float: right;font-weight: bold;
}
.np-ct .np-view .sf-tel{
  font-size:26rpx;
  color: #999;
  font-weight: normal;
  padding-top:10rpx;
  position: relative
}
.sf-tel image{
  top: 13rpx;
}


.border-bottom{
  border-bottom: 2rpx solid #f3f3f3;
}
.back-white{
  background: #fff;
}
.table{
  border-bottom: 0;
  padding-bottom:40rpx;
  margin: 10rpx 50rpx;
}
.c-title{
  margin-left: 50rpx;
}

/* 商品 */
.cart-list .cart-thumb{
  left: 50rpx;
}
.cart-list{
  padding-left:220rpx;
}

.address-box{
  color:#666;
  font-weight:normal;
  font-size:26rpx;
  display: flex;
  padding-top: 0;
  margin-top: 0;
}
.address-title{
  width: 140rpx;
}
.address-inner{
  flex: 1;
}
.heji{
  font-size:24rpx;
  color:#666;
  padding-top:10rpx;
}
