/* pages/cloudOrder/applyStore/applyStore.wxss */
/* 弹框 */
.spec-title{
  font-size: 40rpx;
  font-weight: 600;
  text-align: center;
}
.spec-tip{
  color: #666;
  font-size: 24rpx;
  text-align: center;
}

.nide .upload-box{
  padding:60rpx 0 70rpx;
  display: flex;
  flex-direction: column;
  align-items:center;
}
.up-text{
  color: #999;
  font-size: 22rpx;
  margin-top: 30rpx;
}

.stroe-name{
  font-size: 24rpx;
  color: #999;
}

.input-box{
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #ddd;
  padding-bottom: 15rpx;
  margin-bottom:140rpx;
}
.open-btn{
  width: 100%;
}

.upload-box .add-voucher{
  width: 144rpx;
  height: 144rpx;
  padding: 0;
}
.user-img{
  max-width: 144rpx;
  max-height: 144rpx;
}

.upload-icon{
  width: 144rpx;
  height: 144rpx;
}
/* END */

.view-box{
  margin: 20rpx;
  background: #fff;
  border-radius: 5rpx;
  padding: 30rpx;
}
.item-box{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 35rpx 0;
}

.flex-center{
  display: flex;
  align-items: center;
}
.logo{
  width: 30rpx;
  height: 30rpx;
}
.more{
  width: 35rpx;
  height: 35rpx;
}
.floor{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.com-title{
  font-size: 46rpx;
  font-weight: 600;
}
.com-tip{
  font-size:27rpx;
  color: #666;
  
}
.title-box{
  margin-bottom: 50rpx;
}
.padding-left{
  padding-left: 50rpx;
}
.padding-right{
  padding-right: 35rpx;
}

/* 范围 */
.business{
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0, 0,0,.3);
  top:0;
  z-index: 1;
}
.bus-box{
  position: fixed;
  width: 670rpx;
  left: 20rpx;
  padding: 20rpx;
  background: #fff;
  bottom:20rpx;
  border-radius: 5px;
}

/* 种类弹框 */
.chose-title{
   font-size:46rpx;
   font-weight: 600;

}
.c-tip{
  font-size: 22rpx;
  color: #858585;
}
.c-item-box{
  padding: 100rpx 0 30rpx;
  height: 440rpx;
  width: 100%;
  display: flex;
   align-content: flex-start;

}
.c-item{
  padding: 20rpx 30rpx;
  border: 1px solid #ddd;
  border-radius: 5px;
  margin: 10rpx;
  display: inline-block;
}

.chose-text{
  color: #999;
  font-size:30rpx; 
  margin-bottom: 160rpx;
}

.c-item-ac{
  background: #cddee6;
  color: #fff;
}
.sure-area{
  padding: 0;
  margin: 0;
  width: 100%;
  border:0;
  border-top: 1px solid #ddd;
  background: #fff;
  color: #ccaa77;
}
/* 楼层选择 */
.picker{
  height: 380rpx;
}
.picker-box{
  position: fixed;
  bottom: 0;
  left: 25rpx;
  width:660rpx;
  height: 660rpx;
  background: #fff;
  border-top: 1px solid #dedede;  
  padding: 0 20rpx 0;
}
.picker-border{
  border-right: 1px solid #e6e6e6;
}
.picker-title{
  font-size:32rpx;
  font-weight: 600;
  padding: 70rpx 0 20rpx;
}

picker-view-column view{
  text-align: center;
  text-overflow: ellipsis;
  word-wrap: nowrap;
}
.chosewola{
  color: #e23c3c!important;
}
.chosewola view{
  color: #e23c3c;
}

.picker-sure{
  height: 100rpx;
  width: 660rpx;
  line-height: 100rpx;
  border-top: 1px solid #e6e6e6;
  text-align: center;
  position: absolute;
  bottom: 0;
}

.next-step{
  position: fixed;
  bottom: 0;
  height: 122rpx;
  line-height: 122rpx;
  font-size: 32rpx;
  color: #ccaa77;
  text-align: center;
  border: 0;
  border-top: 1px solid #ddd;
  background: #fff;
  width: 100%;
  font-weight: 600;
}