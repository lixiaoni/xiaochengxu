<!-- 确认收款 -->
<mes show="{{sureModal}}">
  <view>
    <text>是否确认收款？</text>
    <button bindtap='receiveMoney'>确定</button>
  </view>
</mes>
<!-- 验证取货码 -->
<mes show="{{codeModal}}" bind:sureSelectArea="sureSelectAreaListener">
  <view class='modal-box'>
    <text>验证取货码</text>
    <view class='inputCon'>
      <input class='alertInput' value='{{getGoodCode}}' placeholder='请输入取货码（买家提货时出示）' bindinput='watchInput' data-type='goodCode'></input>
    </view>
    <button bindtap='testCode'>确定</button>
  </view>
</mes>
<!-- 我要发货 -->
<mes show="{{expressage}}" bind:sureSelectArea="sureSelectAreaListener">
  <view class='modal-box'>
    <text>填写运单号</text>
    <view class='inputCon'>
      <input class='alertInput' value='{{expressageCom}}' bindinput='watchInput' data-type='exCom' placeholder='请输入物流公司名称 '></input>
      <input class='alertInput' value='{{expressageCode}}' bindinput='watchInput' data-type='exCode' placeholder='请输入运单号 '></input>
    </view>
    <view style='display:flex;'>
      <button wx:if="{{!noBtn}}" data-type='no' bindtap='sendGoods'>先发货，再填单</button>
      <button bindtap='sendGoods'>确定</button>
    </view>
  </view>
</mes>
<!-- 取消订单 -->
<clo show="{{cancelModal}}" bind:sureSelectArea="sureSelectAreaListener">
  <view wx:for='{{reson}}' wx:key='{{index}}' data-current="{{index}}" bindtap='swichReason'>
    <icon wx:if="{{item.selected}}" type="success" color="#CCAA77" data-index="{{index}}" size='18' class="cart-pro-select" />
    <icon wx:else type="circle" class="cart-pro-select" size='18' data-index="{{index}}" /> {{item.title}}
  </view>
  <button bindtap='sureCancel'>确定</button>
</clo>
<!-- 改价 -->
<mes show="{{changeModal}}">
  <view class='modal-box'>
    <text>修改价格</text>
    <view class='inputCon'>
      <input type='digit' value="{{changeMoney}}" class='alertInput' placeholder='请输入修改后价格' data-type='change' bindinput='watchInput'></input>
    </view>
    <button bindtap='sureChange'>确定</button>
  </view>
</mes>


<!-- 待付款 -->
<view class='os-title' wx:if="{{status=='unpaid'}}">
  <view>买家剩余支付时间
    <text>{{clock?clock:""}}</text>
  </view>
  <image src="/image/xian.png"></image>
  <view class='os-status'>
    <view class='active'>已下单</view>
    <view>已付款</view>
    <view>已发货</view>
    <view>已收货</view>
  </view>
</view>

<!-- 已付款 -->
<view class='os-title' wx:if="{{status=='paid'}}">
  <view>买家已付款</view>
  <image src="/image/xian1.png"></image>
  <view class='os-status'>
    <view class='active'>已下单</view>
    <view class='active'>已付款</view>
    <view>已发货</view>
    <view>已收货</view>
  </view>
</view>
<!-- 已发货 待填单-->
<view class='os-title' wx:if="{{status=='shipped'}}">
  <view>买家剩余收货时间
    <text>{{order.autoReviceTime}}</text>
  </view>
  <image src="/image/xian2.png"></image>
  <view class='os-status'>
    <view class='active'>已下单</view>
    <view class='active'>已付款</view>
    <view class='active'>已发货</view>
    <view>已收货</view>
  </view>
</view>
<!-- 已发货-->
<view class='os-title' hidden='{{status3}}'>
  <view>买家剩余收货时间
    <text>{{order.autoReviceTime}}</text>
  </view>
  <image src="/image/xian2.png"></image>
  <view class='os-status'>
    <view class='active'>已下单</view>
    <view class='active'>已付款</view>
    <view class='active'>已发货</view>
    <view>已收货</view>
  </view>
</view>
<!-- 交易成功 -->
<view class='os-title' wx:if="{{status=='finish'}}">
  <view>交易完成</view>
  <image src="/image/xian3.png"></image>
  <view class='os-status'>
    <view class='active'>已下单</view>
    <view class='active'>已付款</view>
    <view class='active'>已发货</view>
    <view class='active'>已收货</view>
  </view>
</view>
<!-- 交易关闭 -->
<view class='os-title' wx:if="{{status=='closed'}}">
  <view>
    <image src="/image/closeS.png"></image>订单已关闭</view>
  <view class='os-close-res'>关闭原因：{{order.closedReason?order.closedReason:""}}</view>
</view>
<!-- 交易取消 -->
<view class='os-title' wx:if="{{status=='cancelled'}}">
  <view>
    <image src="/image/closeS.png"></image>订单已取消</view>
  <view class='os-close-res'>取消原因：{{order.cancelReason?order.cancelReason:""}}</view>
</view>
<!-- 正文 -->
<view class='np-ct'>
  <view class='np-view'>
    <image src="/image/ad.png"></image>
    <text class='np-text'>{{order.consigneeInfo.userPhone}}</text>
    <view>收货人：{{order.consigneeInfo.userName}}</view>
    <text>收货地址：{{order.consigneeInfo.detailAddress}}</text>
  </view>
  <view class='np-view np-view1'>
    <image src="/image/mes2.png"></image>
    <view>留言</view>
    <text>{{order.userMemo}}</text>
  </view>
</view>
<view class='np-mes'>
  <view>
    <image src="/image/mes.png"></image>联系进货商
    <!-- <button class="kf_button" open-type="contact" session-from="weapp"></button> -->
  </view>
  <view bindtap='tel'>
    <image src="/image/tel1.png"></image>拨打电话</view>
  <view>
    <image src="/image/role.png"></image>客户资料</view>
</view>

<view class='cf-cont'>
  <view class='c-title'>
    <image src="/image/ic1.png"></image> {{order.storeInfo.storeName}}
  </view>
  <!-- 商品 -->
  <view>
    <view class="cart-box" wx:for="{{order.goodsInfos}}" wx:for-item="good" wx:key="{{index}}">
      <view class="cart-list">
        <navigator>
          <image class="cart-thumb" src="{{baseUrl+good.mainImgUrl}}?x-oss-process=style/goods-small"></image>
        </navigator>
        <view class='ct-title ct-title1'>{{good.goodsName}}</view>
        <view class="heji">共
          <text>{{order.num}}</text>件商品</view>
      </view>

      <!-- 表格 -->
      <view class="table">
        <view class="tr">
          <view class="th">规格</view>
          <view class="th">数量</view>
          <view class="th">金额</view>
        </view>
        <view class="tr" wx:for="{{good.orderDetails}}" wx:key="{{index}}">
          <view class="td">{{item.goodsDesc}}</view>
          <view class="td">{{item.num}}件</view>
          <view class="td">￥{{item.wholesalePrice}}</view>
        </view>
      </view>

    </view>
  </view>


</view>

<!-- 显示字段 -->
<view class='np-order'>
  <view>供货单号
    <text>{{order.orderNumber}}</text>
  </view>
  <view>创建时间
    <text>{{order.createDate}}</text>
  </view>

  <block wx:if="{{status!='closed' && status!='cancelled'}}">
    <block wx:if="{{status!='unpaid'}}">
      <!-- <view>交易单号
    <text>83578475389</text>
  </view> -->
      <view>支付时间
        <text>{{order.payDate}}</text>
      </view>
    </block>

    <block wx:if="{{status!='unpaid'&&status!='paid'}}">
      <view>发货时间
        <text>{{order.deliverDate}}</text>
      </view>
    </block>
    <block wx:if="{{status=='finish'}}">
      <view>成交时间
        <text>{{order.finishDate}}</text>
      </view>
    </block>
  </block>
  <block wx:if="{{status=='closed'|| status=='cancelled'}}">
    <view>关闭时间
      <text></text>
    </view>
  </block>
</view>

<view class='np-fapiao'>
  <view>发票信息
    <text>{{order.receiptInfo?order.receiptInfo.invoiceCategory:"不开发票"}}</text>
  </view>
  <view wx:if="{{order.receiptInfo.invoiceType=='公司'}}">
    <view>公司名称
      <text>{{order.receiptInfo.invoiceTitle}}</text>
    </view>
    <view>纳税人识别号
      <text>{{order.receiptInfo.identificationNumber}}</text>
    </view>
    <block wx:if="{{order.receiptInfo.invoiceCategory=='增值税专用发票'}}">
      <view>注册地址
        <text>{{order.receiptInfo.registeredAddress}}</text>
      </view>
      <view>注册电话
        <text>{{order.receiptInfo.registererMobile}}</text>
      </view>
      <view>开户银行
        <text>{{order.receiptInfo.depositBank}}</text>
      </view>
      <view>开户账号
        <text>{{order.receiptInfo.depositBankNumber}}</text>
      </view>
    </block>
  </view>
</view>

<view class='os-mon'>
  配送方式
  <text>物流配送</text>
  <block wx:if="{{item.expressStatus}}">
    <view>物流公司
      <text>{{order.expressCompany?order.expressCompany:""}}</text>
    </view>
    <view>快递单号
      <text>{{order.expressNumber?order.expressNumber:""}}</text>
    </view>
  </block>
</view>

<view class='os-mon os-mon1'>备注信息
  <textarea value='{{order.remark?order.remark:""}}' bindconfirm='saveRemark' show-confirm-bar='true' maxlength='140' class='textarea' placeholder='140字以内'></textarea>
</view>

<!-- 金额 -->
<view class='np-order {{status!="closed"?"np-order-bar":"np-order-bar1"}} '>
  <!-- <view>优惠改价
    <text>￥{{order.orderAmount}}</text>
    <text class='os-text'>￥1992.00</text>
  </view> -->
  <view>运费类型
    <text>货到付款</text>
  </view>
  <view class='np-o-view'>
    <!-- 未支付 -->
    <block wx:if='{{status=="unpaid"}}'>应收金额</block>
    <!-- 已支付 -->
    <block wx:if='{{status!="closed" && status!="unpaid" && status!="cancelled"}}'>实收金额</block>
    <!-- 关闭 -->
    <block wx:if='{{status=="closed"|| status=="cancelled"}}'>订单总额</block>
    <text>￥{{order.orderAmount}}</text>
  </view>
</view>

<view wx:if="{{status!='closed' && status!='cancelled'}}" class='cf-button'>
  <block wx:if="{{status=='unpaid'}}">
    <button class='or-active'> 提醒付款 </button>
    <button bindtap='showModal' data-type='change' data-num='{{order.orderNumber}}' class='or-active'> 整单改价 </button>
    <button class='or-active' data-type='ex' bindtap='showModal' data-num="{{order.orderNumber}}">收款发货</button>
    <button data-num="{{order.orderNumber}}" data-type='cancel' bindtap='showModal'>取消订单</button>
  </block>

  <block wx:if="{{status=='paid'}}">
    <button class='or-active' data-num="{{item.orderNumber}}" data-type='ex' bindtap='showModal'> 我要发货 </button>
    <button wx:if="{{order.orderStatusChildSta=='unForm'}}" class='or-active' data-type='ex2' bindtap='showModal'> 填写运单号 </button>
  </block>  
  
  <block wx:if="{{status=='shipped' || status=='finish'}}">
    <button class='or-active'> 查看物流 </button>
  </block>
</view>
