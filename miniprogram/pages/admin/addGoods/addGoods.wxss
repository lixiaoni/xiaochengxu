.write image{width:80%;margin-left:10%}
.page__category-content{margin:0 20rpx;background:#fff;color:#333;padding-bottom:10rpx;margin-bottom:30rpx;border-radius:20rpx;font-size:30rpx;padding-right:30rpx;overflow:hidden}
.weui-title{font-size:34rpx;font-weight:bold;height:100rpx;line-height:100rpx;padding-left:30rpx;border-bottom:2rpx solid #E7E7E7;width:101%;position:relative}
.weui-input{padding-left:30rpx;color:#999999;font-size:28rpx;margin-bottom:10rpx}
.weui-cell__hd image,.weui-cell__ft1 image,.weui-title image,.weui-cell__ft image{width:30rpx;height:30rpx;vertical-align:middle;margin-top:-6rpx;margin-right:15rpx}
.weui-cell:before{border-top:2rpx solid #E7E7E7}
.weui-cell__ft{color:#333}
.weui-title view{position:absolute;right:30rpx;top:0rpx;color:#999;font-size:30rpx}
.weui-active{color:#C79359;font-weight:600}
.weui-cell__bd,.weui-cell__ft text{font-weight:600}
.weui-cell__ft text{margin-right:30rpx}
.weui-cell1{padding:10px 15px;display:-webkit-box;display:-webkit-flex;display:flex;padding-right:0;position:relative}
.weui-cell{padding-right:0}
.weui-cell__ft1{position:absolute;right:0;top:58rpx}
.weui-input{position:relative;font-size:30rpx;color:#333}
.weui-input text{position:absolute;right:0rpx;top:3rpx;font-size:28rpx}
.weui-input .pla-input{font-weight:normal;font-size:28rpx;color:#999}
