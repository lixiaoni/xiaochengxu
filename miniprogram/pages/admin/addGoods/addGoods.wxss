.add-cont{margin-bottom:130rpx}
.weui-uploader__input-box{margin-bottom:30rpx;border-radius:6rpx}
.weui-uploader__img{border-radius:6rpx}
.weui-upload{padding-top:30rpx}
.weui-upload::before{border-top:0}
.weui-icon{font-size:24rpx;color:#999;margin:10rpx 0;font-weight:normal}
.weui-icon image{width:30rpx;height:30rpx;vertical-align:middle;margin-top:-4rpx;margin-right:10rpx}
.add-size{padding:5rpx 30rpx;font-size:28rpx;margin:10rpx 0 20rpx 0}
.add-size text{margin-right:30rpx}
.weui-uploader__files{position:relative}
.mainmove{position:absolute;opacity:0.7}
.maind{background:#fff;border:1px dashed #efefef}
.mainend{position:static;opacity:1}
.weui-uploader__file{margin-right:10rpx;padding-top:20rpx}
.weui-uploader__img,.weui-uploader__input-box{width:150rpx;height:150rpx;margin-right:18rpx}
.weui-uploader__input-box{margin-top:20rpx}
.page-weui{border-top:1rpx solid #EFEFEF;margin-left:15px}
.page-weui-active{border-top:0}
.page-weui .weui-cell{padding-left:0}
.page-weui .add-size{margin-left:0}
.ad-top{background:none;padding:0;color:#333;font-weight:bold;margin-bottom:20rpx}
.ad-top  .ad-active,.ad-top view{background:#fff;border:0}
.ad-active{color:#CCAA77}
.ad-top view{height:120rpx;line-height:120rpx;width:45.6%}
.ad-top view:first-child image{width:55rpx;height:55rpx}
.stock{color:#333;font-weight:bold;font-size:36rpx;text-align:right;padding-right:30rpx}
.sendmessage{background-color:white;width:100%;position:fixed;bottom:0rpx;display:flex;flex-direction:row;z-index:1000}
.sendmessage input{width:100%;height:80rpx;background-color:white;line-height:80rpx;font-size:28rpx;border:2rpx solid #d0d0d0;padding-left:20rpx}
.sendmessage button{border:2rpx solid white;width:18%;height:80rpx;background:#fff;color:#000;line-height:80rpx;font-size:28rpx}
.weui-plac{color:#999;font-size:24rpx}
.write .value,.write textarea,.write input{font-size:28rpx;word-wrap:break-word;word-break:normal}
.write input{font-size:32rpx;height:120rpx}
.write textarea.input-v{height:80rpx}
.write textarea{height:200rpx;z-index: 1}
.write .value{background:red;position:absolute}
.write{position:relative;padding-right:70rpx;max-height:650rpx;overflow-y: auto}
.write-cont{background:#F9F9F9;width:60rpx;padding-bottom:0;position:fixed;z-index:1000;right:10rpx;top:450rpx}
.write-cont image{width:50rpx;height:50rpx;margin-right:30rpx}
.removeImg{position:relative;margin-bottom:20rpx;border:2rpx solid #ddd;height:200rpx;width:90%;margin-left:5%;padding:15rpx 0 15rpx 15rpx;height:auto;padding-bottom:60rpx;z-index: 1}
.removeImg>view{position:absolute;bottom:0rpx;z-index:9;background:#F0F0F0;height:55rpx;width:auto;right:0;font-size:28rpx;line-height:50rpx}
.removeImg>view view{display:inline-block;width:130rpx;color:#666;text-align:center;position: relative}
.removeImg>view view text{padding: 0 25rpx;z-index: 1000;position: relative}
.removeImg>view image{width:35rpx;height:35rpx;vertical-align:middle;position:absolute;left:-10rpx;top:9rpx;z-index: 100}
.removeImg>view  view:first-child image{width:30rpx;height:30rpx}
.add-bottom{z-index:9999}
.page{overflow-x:hidden}
